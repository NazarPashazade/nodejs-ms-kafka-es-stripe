generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  @@map("products")
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       Float
  stock       Int
}

