{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    "module": "commonjs",
    "target": "esnext",

    "rootDir": "./src",
    "outDir": "./dist",

    "experimentalDecorators": true,

    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*"]
}
